<p id="notice"><%= notice %></p>

<h1>
  <%= @user.username %>
</h1>

<% if @user.ratings.empty? %>
  <p>No ratings</p>
<% else %>
  <p>Has <%= pluralize(@user.ratings.count, "rating") %>, average <%= @user.average_rating %></p>

  <h2>Ratings</h2>
    <ul>
      <% @user.ratings.each do |rating| %>
          <li>
            <%= rating %>
            <% if @user == current_user %>
                <%= link_to 'delete', rating, method: :delete, data: { confirm: 'Are you sure?' } %>
            <% end %>
          </li>
      <% end %>
    </ul>

<%end%>

<h2>BeerClub Memberships</h2>
<% if not @user.memberships.empty? %>
    <ul>
      <% @user.memberships.each do |membership| %>
          <li><%= link_to membership.beer_club.name, membership.beer_club %></li>
      <% end %>
    </ul>
<% else %>
    <p>No club memberships</p>
<% end %>

<% if @user == current_user %>
    <%= link_to 'Destroy', @user, method: :delete, data: {confirm: 'Are you sure?'} %>
    <%= link_to 'Edit', edit_user_path(@user) %>
<% end %>
<%= link_to 'Back', users_path %>
