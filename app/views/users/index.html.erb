<h1>Users</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.username, user %></td>
        <% if not user.active and current_user.admin %>
            <td><span class="label label-info">account frozen</span></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

