<table class="table table-hover">
  <thead>
  <tr>
    <th><%= link_to 'Name', breweries_path(order:"name"), class:'btn btn-default' %></th>
    <th><%= link_to 'Year', breweries_path(order:"year"), class:'btn btn-default' %></th>
  </tr>
  </thead>
  <tbody>
  <% breweries.each do |brewery| %>
      <tr>
        <td><%= link_to brewery.name, brewery, %></td>
        <td><%= brewery.year %></td>
        <td><td><%= link_to('Destroy', brewery, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-danger') if current_user %></td></td>
      </tr>
  <% end %>
  </tbody>
</table>